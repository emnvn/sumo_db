{sub_dirs,["deps", "examples"]}.
{lib_dirs,["deps", "examples"]}.
{erl_opts, [
  {parse_transform, lager_transform},
  {src_dirs, ["src", "test", "examples/blog/src", "examples/elastic-blog/src"]},
  warn_unused_vars,
  warn_export_all,
  warn_shadow_vars,
  warn_unused_import,
  warn_unused_function,
  warn_bif_clash,
  warn_unused_record,
  warn_deprecated_function,
  warn_obsolete_guard,
  strict_validation,
  warn_export_vars,
  warn_exported_vars,
  %warn_missing_spec,
  warn_untyped_record, debug_info
]}.
{deps, [
  {lager,       ".*", {git, "git://github.com/basho/lager.git",          "3.0.0"}},
  {worker_pool, ".*", {git, "git://github.com/inaka/worker_pool.git",    "facfc7b2c2320cba576a2dcdd12c85c583017bec"}},
  {riakc,       ".*", {git, "git://github.com/inaka/riak-erlang-client", "2.1.1-R18"}},
  {uuid,        ".*", {git, "git://github.com/okeuday/uuid.git",         "v1.5.3"}},
  {mixer,       ".*", {git, "git://github.com/inaka/mixer",              "0.1.3"}}
]}.
{xref_warnings, true}.
{xref_checks, [undefined_function_calls, undefined_functions, locals_not_used, deprecated_function_calls, deprecated_functions]}.
{require_min_otp_vsn, "17"}.

%% Common test
{ct_log_dir,"log/ct"}.
{ct_extra_params,"-no_auto_compile -dir ebin -pa deps/*/ebin -smp enable -s emysql -s sumo_db -erl_args -config test/test.config"}.
